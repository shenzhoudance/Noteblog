<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <p class="date text-center"><%= @post.created_at.strftime('%A, %B %d') %></p>
      <h1 class="text-center"> <%= @post.title %></h1>
      <hr class="small">
      <% if current_user %>
        <%= link_to "编辑", edit_post_path(@post), class: "btn btn-default" %>
        <%= link_to "删除", post_path(@post), class: "btn btn-default", method: :delete, data: {confirm: "Are you sure you want to delete this post?"} %>
      <% end %>
      <br>
      <br>
      <br>
      <div id="content">
        <%= markdown @post.content %>
      </div>
    </div>

  </div>
</div>
